<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="with_odoo_context">
        <t name="With Odoo Context"/>
        <t t-call="website.layout">
            <div id="wrap">
                <div class="oe_structure">
                    <div class="container">
                        <h1 class="mt32">With Odoo Context</h1>
                        <h2 class="mt16">You have everything you need ðŸ¤˜ â˜ 
                            <i class="fab fa-acquisitions-incorporated"></i>
                            <i class="fab fa-researchgate"></i>
                        </h2>
                    </div>
                </div>
            </div>
        </t>
    </template>

    <template id="with_odoo_context_inherit" inherit_id="website_qweb.with_odoo_context">
        <xpath expr="//h1" position="after">
            <h2>Coming from an inherited view</h2>
        </xpath>
        <xpath expr="//h1" position="attributes">
            <attribute name="class">mt32 my-class-name</attribute>
        </xpath>
    </template>

    <template id="exaddon_option_Blog" name="Exaddon option Blog" inherit_id="website_blog.opt_blog_cover_post" active="False" customize_show="True">
        <xpath expr="//div[hasclass('container')][1]" position="before">
            <h1 style="position:absolute;index:1500">Exaddon H1 blog option</h1>
        </xpath>
    </template>

    <data noupdate="1">
        <record id="with_odoo_context_page" model="website.page">
            <field name="website_published">True</field>
            <field name="url">/with_odoo_context</field>
            <field name="view_id" ref="with_odoo_context"/>
        </record>
    </data>

</odoo>
